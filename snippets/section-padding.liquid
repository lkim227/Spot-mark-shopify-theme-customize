.section-{{ section.id }}-padding {
	{% if section.settings.padding_top == 'no-indent' %}
		padding-top: 0; 
	{% else %}
		padding-top: 3.2rem; 
	{% endif %}

	{% if section.settings.padding_bottom == 'no-indent' %}
		padding-bottom: 0; 
	{% else %}
		padding-bottom: 3.2rem; 
	{% endif %}
}

@media screen and (min-width: 576px) { 
	.section-{{ section.id }}-padding {
		{% if section.settings.padding_top == 'no-indent' %}
			padding-top: 0; 
		{% elsif section.settings.padding_top == 'xl' %}
			padding-top: 6.4rem;
		{% else %}
			padding-top: 3.2rem;  
		{% endif %}

		{% if section.settings.padding_bottom == 'no-indent' %}
			padding-bottom: 0; 
		{% elsif section.settings.padding_bottom == 'xl' %}
			padding-bottom: 6.4rem; 
		{% else %}
			padding-bottom: 3.2rem; 
		{% endif %}
	} 
}

