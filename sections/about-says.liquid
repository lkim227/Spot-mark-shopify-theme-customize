              {%- endif -%}
            </div>
            <div class="about-says-back-sub_title">
              {%- if heading_back != blank -%}
                <h1>{{ heading_back }}</h1>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
      <div class="about-says-back-middle">
        <div class="row">
          <div class="col-lg-4">
            {% if section.settings.text_back != blank  %}
            <div class="says-text-back">
                {{ section.settings.text_back }}
              </div>
            {% endif %}
          </div>
          <div class="col-lg-4">
            <div class="says-middle-icons">
              <div class="says-middle-top-icons">
                <div class="placeholder-circle"></div>
                <div class="says-middle-icon1" id="slider-back">
                  {%- if section.settings.middle_icon1_back != blank -%}
                    {{ section.settings.middle_icon1_back | image_url: width: auto | image_tag: loading: 'lazy' }}
                  {%- endif -%}
                </div>

                <div class="says-middle-icon2">
                  {%- if section.settings.middle_icon2_back != blank -%}
                    {{ section.settings.middle_icon2_back | image_url: width: auto | image_tag: loading: 'lazy' }}
                  {%- endif -%}
                </div>
              </div>
              <div class="says-middle-icon3">
                {%- if section.settings.middle_icon3_back != blank -%}
                  {{ section.settings.middle_icon3_back | image_url: width: auto | image_tag: loading: 'lazy' }}
                {%- endif -%}
              </div>
              <div class="says-middle-text">
                {{ section.settings.dragable_text_back }}
              </div>
            </div>
          </div>
          <div class="col-lg-4">
           
          </div>
        </div>
      </div>
          <slider-component >
        <div class="common__slideshow swiper about-says-back-wrapper"
                data-slidesDesktop="3"
                data-slidesLaptop="2"
                data-slidesTab="2"
                data-slidesMobile="1"
                data-direction="false"
                data-autoPlay="false"
                data-delay="1000"
                data-loop="false"
                data-freemode="false"
                data-freemomentum="false"
                data-speed="3000"
                data-desktopspace="40"
                data-laptopspace="30"
                data-tabspace="25"
                data-mobilespace="15"
            >
          <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'back_block' -%}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                  <div class="about-says-back-card">
                    <p class="say-count-back">{{ block.settings.pre_heading }}</p>
                    <h3 class="say-title-back">{{ block.settings.heading }}</h3>
                    <div class="say-info-back">
                      {{ block.settings.text }}
                    </div>
                  </div>
                </div>
            {%- endcase -%}
          {% endfor %}
        </div>
      </div>
      </slider-component>
    </div>
</div>
  </div>
</div>

