{{ 'section-about-says.css' | asset_url | stylesheet_tag: preload: true }}
{%- style -%}
  #front-panel .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m  }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }
  #front-panel .section-{{ section.id }}-padding .about-says-title h3,
  #front-panel .section-{{ section.id }}-padding .about-says-sub_title h1,
  #front-panel .section-{{ section.id }}-padding .about-says-middle .says-right-text p{
      color: {{ section.settings.color }};
  }
  #front-panel .section-{{ section.id }}-padding .about-says-card {
      background: {{ section.settings.card_bg }};
  }
  #front-panel .section-{{ section.id }}-padding .about-says-card .say-title,
  #front-panel .section-{{ section.id }}-padding .about-says-card .say-info p{
      color: {{ section.settings.card_text }};
  }
  #front-panel .section-{{ section.id }}-padding .about-says-card .say-count{
      color: {{ section.settings.card_text }};
  }
  #front-panel .section-{{ section.id }}-padding .about-says-middle .says-middle-text p{
      color: {{ section.settings.middle_color }};
  }
  #front-panel .section-{{ section.id }}-padding .about-says-card .say-info{
      border-color: {{ section.settings.card_border }};
  }
  @media screen and (min-width: 750px) {
    #front-panel .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }


  #back-panel .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m_back  }}px;
    padding-bottom: {{ section.settings.padding_bottom_m_back }}px;
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-title h3,
  #back-panel .section-{{ section.id }}-padding .about-says-back-sub_title h1,
  #back-panel .section-{{ section.id }}-padding .about-says-back-middle .says-text-back p{
      color: {{ section.settings.color_back }};
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-card {
      background: {{ section.settings.card_bg_back }};
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-card .say-title-back,
  #back-panel .section-{{ section.id }}-padding .about-says-back-card .say-info-back p{
      color: {{ section.settings.card_text_back }};
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-card .say-count-back{
      color: {{ section.settings.card_text_back }};
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-middle .says-middle-text p{
      color: {{ section.settings.middle_color_back }};
  }
  #back-panel .section-{{ section.id }}-padding .about-says-back-card .say-info-back{
      border-color: {{ section.settings.card_border_back }};
  }
  @media screen and (min-width: 750px) {
    #back-panel .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_back }}px;
      padding-bottom: {{ section.settings.padding_bottom_back }}px;
    }
  }



{%- endstyle -%}

<div class="front-panel" id="front-panel">
  <div class="about-says-main-wrapper section-{{ section.id }}-padding" id="section-{{ section.id }}">
    <div class="section-bg">
      {%- if section.settings.background_image != blank -%}
        {{ section.settings.background_image | image_url: width: auto | image_tag: loading: 'lazy' }}
      {%- endif -%}
    </div>
    <div class="container">
      <div class="about-say-section-title">
        <div class="row">
          <div class="col-lg-12">
            {%- liquid
              assign pre_heading = section.settings.pre_heading
              assign heading = section.settings.heading
            -%}
            <div class="about-says-title">
              {%- if pre_heading != blank -%}
                <h3>{{ pre_heading }}</h3>
              {%- endif -%}
            </div>
            <div class="about-says-sub_title">
              {%- if heading != blank -%}
                <h1>{{ heading }}</h1>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
      <div class="about-says-middle">
        <div class="row">
          <div class="col-lg-4"></div>
          <div class="col-lg-4">
            <div class="says-middle-icons">
              <div class="says-middle-top-icons">
                <div class="placeholder-circle"></div>
                <div class="says-middle-icon1" id="slider-front">
                  {%- if section.settings.middle_icon1 != blank -%}
                    {{ section.settings.middle_icon1 | image_url: width: auto | image_tag: loading: 'lazy' }}
                  {%- endif -%}
                </div>

                <div class="says-middle-icon2">
                  {%- if section.settings.middle_icon2 != blank -%}
                    {{ section.settings.middle_icon2 | image_url: width: auto | image_tag: loading: 'lazy' }}
                  {%- endif -%}
                </div>
              </div>
              <div class="says-middle-icon3">
                {%- if section.settings.middle_icon3 != blank -%}
                  {{ section.settings.middle_icon3 | image_url: width: auto | image_tag: loading: 'lazy' }}
                {%- endif -%}
              </div>
              {% if section.settings.dragable_text != blank %}
                <div class="says-middle-text">
                  {{ section.settings.dragable_text }}
                </div>
              {% endif %}
            </div>
          </div>
          {% if section.settings.text != blank %}
            <div class="col-lg-4">
              <div class="says-right-text">
                {{ section.settings.text }}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
        <slider-component >
        <div class="common__slideshow swiper about-says-wrapper"
                data-slidesDesktop="3"
                data-slidesLaptop="2"
                data-slidesTab="2"
                data-slidesMobile="1"
                data-direction="false"
                data-autoPlay="false"
                data-delay="1000"
                data-loop="false"
                data-freemode="false"
                data-freemomentum="false"
                data-speed="3000"
                data-desktopspace="40"
                data-laptopspace="30"
                data-tabspace="25"
                data-mobilespace="15"
            >
            <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'front_block' -%}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                  <div class="about-says-card">
                    {% if block.settings.pre_heading != blank %}
                      <p class="say-count">{{ block.settings.pre_heading }}</p>
                    {% endif %}
                    {% if block.settings.heading != blank %}
                      <h3 class="say-title">{{ block.settings.heading }}</h3>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div class="say-info">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}
                  </div>
                </div>
            {%- endcase -%}
          {% endfor %}
        </div>
      </div>
      </slider-component>
    </div>
  </div>
</div>

<div class="back-panel" id="back-panel">
  <div class="about-says-back-main-wrapper"   {%- if section.settings.background_image_back != blank -%} style="background-image:url('{{ section.settings.background_image_back | img_url:"master" }}')"   {%- endif -%}>
    <div class="inner-wrapper section-{{ section.id }}-padding" id="section-{{ section.id }}"> 
    <div class="container">
      <div class="about-say-back-section-title">
        <div class="row">
          <div class="col-lg-12">
            {%- liquid
              assign pre_heading_back = section.settings.pre_heading_back
