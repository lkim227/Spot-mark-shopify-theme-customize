          "label": "Button Title 2"
        },
        {
          "type": "color",
          "id": "btn_2_title_color",
          "label": "Button Title Color 2",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "btn_2_bg_color",
          "label": "Button Background Color 2",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Landing Vision"
    }
  ]
}
{% endschema %}
