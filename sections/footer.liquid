                        "
                        src="{{ block.settings.logo_2 | image_url: width: block.settings.logo_2.width }}"
                        class="footer__logo header__heading-logo"
                        width="{{ block.settings.logo_width }}"
                        height="auto"
                        alt="{{ block.settings.logo_2.alt | default: shop.name | escape }}"
                        loading="lazy"
                      >
                    {%- else -%}
                      <span class="h5">{{ shop.name }}</span>
                    {%- endif -%}
                  </a>
                  <div class="footer__copyright">
                    <small class="copyright__content">&copy; Copyright,</small>
                    <small class="copyright__content">
                      {{- shop.name | link_to: routes.root_url }},
                      {{ 'now' | date: '%Y' -}}
                    </small>
                    <small class="copyright__content">
                      {{- powered_by_link -}}
                    </small>
                  </div>
                </div>
              {%- when 'contacts' -%}
                <div
                  class="footer-block contacts"
                  {{ block.shopify_attributes }}
                >
                  <h2 class="h5 footer-block__heading"> {{ block.settings.contact_info }}</h2>
                 
                  <p class="contacts__text">
                    {{ block.settings.description }}
                  </p>
