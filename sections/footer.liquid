<script src="{{ 'footer.js' | asset_url }}" defer="defer"></script>

<footer class="footer color-{{ section.settings.color_scheme }} {% if section.settings.show_border %} footer--border {% endif %}">
  <div class="footer__content-top container">
    {%- if section.blocks.size > 0 -%}
      <div class="footer__blocks-container">
        <div class="footer__blocks-wrapper">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'link_list' -%}
                {%- if block.type == 'link_list' and block.settings.heading != blank -%}
                  <div class="accordion">
                    <details
                      {% if section.settings.enable_open_menu %}
                        open
                      {% endif %}
                    >
                      <summary>
                        <h2 class="h5 footer-block__heading">
                          {{ block.settings.heading | escape }}
                        </h2>
                        {% render 'icon-caret' %}
                      </summary>
                      {%- if block.settings.menu != blank -%}
                        <ul class="footer-block__details-content list-unstyled">
                          {%- for link in block.settings.menu.links -%}
                            <li>
                              <a
                                href="{{ link.url }}"
                                class="list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                              >
                                <span>{{ link.title }}</span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </details>
                  </div>
                {%- endif -%}

                <div
                  class="footer-block {% if block.type == 'link_list' and block.settings.heading != blank %}footer-block--menu{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.heading != blank -%}
                    <h2 class="h5 footer-block__heading">
                      {{- block.settings.heading | escape -}}
                    </h2>
                  {%- endif -%}

                  {%- if block.settings.menu != blank and block.settings.heading != blank -%}
                    <ul class="footer-block__details-content list-unstyled">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            class="list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                          >
                            {{- link.title }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
              {%- when 'logo_info' -%}
                <div
                  class="footer-block footer-block--logo"
                  {{ block.shopify_attributes }}
                >
                  <a
                    href="{{ routes.root_url }}"
                    class="footer__logo-link link link--text focus-inset"
                  >
                    {%- if block.settings.logo != blank -%}
                      <img
                        srcset="
                          {%- if block.settings.logo.width >= 55 -%}{{ block.settings.logo | image_url: width: '50x' }} 50w,{%- endif -%}
                          {%- if block.settings.logo.width >= 100 -%}{{ block.settings.logo | image_url: width: '100x' }} 100w,{%- endif -%}
                          {%- if block.settings.logo.width >= 150 -%}{{ block.settings.logo | image_url: width: '150x' }} 150w,{%- endif -%}
                          {%- if block.settings.logo.width >= 200 -%}{{ block.settings.logo | image_url: width: '200x' }} 200w,{%- endif -%}
                        "
                        src="{{ block.settings.logo | image_url: width: block.settings.logo.width }}"
                        class="footer__logo header__heading-logo"
                        width="{{ block.settings.logo_width }}"
                        height="auto"
                        alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
                        loading="lazy"
                      >
                      {%- if block.settings.logo_2 != blank -%}
                        <img
                          srcset="
                            {%- if block.settings.logo_2.width >= 55 -%}{{ block.settings.logo_2 | image_url: width: '50x' }} 50w,{%- endif -%}
                            {%- if block.settings.logo_2.width >= 100 -%}{{ block.settings.logo_2 | image_url: width: '100x' }} 100w,{%- endif -%}
                            {%- if block.settings.logo_2.width >= 150 -%}{{ block.settings.logo_2 | image_url: width: '150x' }} 150w,{%- endif -%}
                            {%- if block.settings.logo_2.width >= 200 -%}{{ block.settings.logo_2 | image_url: width: '200x' }} 200w,{%- endif -%}
                          "
                          src="{{ block.settings.logo_2 | image_url: width: block.settings.logo_2.width }}"
                          class="footer__logo header__heading-logo"
                          width="{{ block.settings.logo_width }}"
                          height="auto"
                          alt="{{ block.settings.logo_2.alt | default: shop.name | escape }}"
                          loading="lazy"
                        >
                      {%- endif -%}
                    {%- elsif block.settings.logo_2 != blank -%}
                      <img
                        srcset="
                          {%- if block.settings.logo_2.width >= 55 -%}{{ block.settings.logo_2 | image_url: width: '50x' }} 50w,{%- endif -%}
                          {%- if block.settings.logo_2.width >= 100 -%}{{ block.settings.logo_2 | image_url: width: '100x' }} 100w,{%- endif -%}
                          {%- if block.settings.logo_2.width >= 150 -%}{{ block.settings.logo_2 | image_url: width: '150x' }} 150w,{%- endif -%}
